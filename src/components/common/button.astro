---
import { cn } from "@/lib/utils";
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  bordered?: boolean;
}
const { bordered, ...props } = Astro.props;
---

<a
  target="_blank"
  rel="noopener noreferrer"
  class={cn(
    "py-3 px-20 md:px-12 transition-all rounded-2xl text-xl flex items-center gap-x-1 active:scale-95 text-background bg-gradient-green ",
    bordered &&
      "border border-white/10 bg-background text-forenground hover:text-white hover:border-white/15",
  )}
  {...props}
>
  <slot />
</a>
