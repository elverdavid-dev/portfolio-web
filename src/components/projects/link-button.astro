---
import { cn } from "@/lib/utils";

interface Props {
  href: string;
  bordered?: boolean;
}
const { href, bordered } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class={cn(
    "py-2 px-4 md:px-6 transition-all rounded-2xl text-xl flex items-center gap-x-1 active:scale-95 bg-white/5 text-forenground hover:text-white",
    bordered &&
      "border border-white/10 text-forenground bg-transparent hover:border-white/15",
  )}
>
  <slot />
</a>
