---
import Subtitle from "@/components/common/subtitle.astro";
import { Image } from "astro:assets";
import { services } from "@/services/services";
---

<section class="mt-36">
  <Subtitle> Servicios </Subtitle>
  <section class="grid md:grid-cols-2 gap-5 rounded-2xl mt-10">
    {
      services.map((service) => (
        <article class="flex flex-col md:flex-row gap-8 border border-white/10 p-5 rounded-2xl bg-white/5">
          <Image
            src={service.url_image}
            alt={service.title}
            width="100"
            height="100"
          />
          <div class="w-full">
            <h3 class="text-xl font-bold">{service.title}</h3>
            <p class="py-2 text-lg text-gray-400">{service.description}</p>
          </div>
        </article>
      ))
    }
  </section>
</section>
