---
import { technologies } from "@/services/technologies";
import { Image } from "astro:assets";
import Subtitle from "@/components/common/subtitle.astro";
import Rocket from "@/assets/icons/rocket.astro";
---

<section class="mt-36" id="technologies">
  <Subtitle> <Rocket /> Tecnologias </Subtitle>
  <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-3 mt-10">
    {
      technologies.map(({ name, logo }) => (
        <div class="py-4 flex items-center flex-col gap-y-1 hover:scale-105 duration-200 ease-in hover:text-white">
          <Image src={logo} alt={name} width="60" height="60" />
          <span class="text-lg">{name}</span>
        </div>
      ))
    }
  </div>
</section>
